package com.vti.service;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;


import com.vti.entity.News;

import com.vti.form.NewsFormForCreating;
import com.vti.form.NewsFormForUpdating;

public interface INewsService {

	public Page<News> getAllNews(Pageable pageable);

	public News getNewsByID(short id);
	
	public void createNews(NewsFormForCreating form);

	public void updateNews(short id, NewsFormForUpdating form);

	public void deleteNews(short id);
}
